<div id=<%="carousel#{clothe.id}"%> class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%=cl_image_tag(clothe.photos[0].key, width: size, height: size, alt: "photo")%>
    </div>
    <% clothe.photos.drop(1).each do |photo| %>
      <div class="carousel-item">
        <%=cl_image_tag(photo.key, width: size, height: size)%>
      </div>
    <% end %>
  <a class="carousel-control-prev" data-bs-target=<%="#carousel#{clothe.id}"%> role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" data-bs-target=<%="#carousel#{clothe.id}"%> role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
