<div class="navbar container-phone">
  <h1 class="title">ğŸ•ºğŸ¼ Mon profil</h1>
  <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: 'me-3 logout-button' do %>
    <i class="fa-solid fa-power-off"></i>
  <% end %>
</div>
<div class="container-phone align-items-center">
  <div class="profil-infos d-flex align-items-center justify-content-center mt-2">
    <div class="profil-photo d-flex position-relative">
      <%= image_tag "profil/profil_kylan.jpeg", class: "rounded-circle image-profile", width: '125px', height: '125px' %>
      <%= link_to image_tag("buttons/edit_button.svg", alt: "Modifier mon profil", class: "edit-button edit-button-overlay"), edit_profils_path(@user) %>
    </div>
    <div class="profil-description">
      <h2><strong>@<%= @user.user_name %></strong></h2>
      <p><%= @user.first_name%> <%= @user.last_name %></p>
      <p><i class="fa-solid fa-star"></i> <%= @user.ranking %>/5</p>
    </div>
  </div>
</div>

<div class="dashboard container-phone">
  <h2><strong>Tableau de bord</strong></h2>
  <div class="d-flex justify-content-center gap-3 pt-2">
    <%= link_to profils_likes_path, class: 'booking-btn' do %>
      <i class="fa-solid fa-heart"></i>
    <% end %>
    <%= link_to owner_transactions_path, class: 'booking-btn' do %>
      <i class="fa-solid fa-list"></i>
    <% end %>
  </div>

  <div class="container-phone">
    <div class="row">
      <div class="text-center">
        <br>
      </div>
      <%= render "ma_komod", transactions: @transactions, clothes: @clothes %>
      <%= render "transactions", transactions: @transactions, clothes: @clothes %>
    </div>
  </div>
</div>
